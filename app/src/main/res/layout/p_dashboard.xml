<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:background="@color/CornflowerBlue"
    android:orientation="vertical"
    android:padding="16dip">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@mipmap/ic_siamlogo2"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="10dip">

        <TextView
            android:id="@+id/FTPHOST"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingRight="20dp"
            android:text="ประปาสาขา"
            android:textColor="@color/DarkRed"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvwwcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="5532019"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip">

        <TextView
            android:id="@+id/text1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingRight="40dp"
            android:text="ชื่อประปา"
            android:textColor="@color/DarkRed"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvwwTname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="สตึก"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip">

        <TextView
            android:id="@+id/tvempid"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingRight="60dp"
            android:text="เส้นทาง"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/DarkRed" />

        <TextView
            android:id="@+id/tvroute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="010001"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingRight="40dp"
            android:text="จำนวนราย"
            android:textColor="@color/DarkRed"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="100"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip">

        <TextView
            android:id="@+id/tvempname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingRight="60dp"
            android:text="อ่านแล้ว"
            android:textColor="@color/DarkRed"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="20dp"
            android:text="ราย"
            android:textColor="@color/DarkRed"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="50dip">

        <ImageButton
            android:id="@+id/bn_moveF"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="#13b586"
            app:srcCompat="@android:drawable/ic_media_previous" />

        <ImageButton
            android:id="@+id/bn_moveP"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_previous" />

        <ImageButton
            android:id="@+id/bn_moveN"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_next" />

        <ImageButton
            android:id="@+id/bn_moveL"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@color/MediumSeaGreen"
            app:srcCompat="@android:drawable/ic_media_next" />

    </LinearLayout>

</LinearLayout>
